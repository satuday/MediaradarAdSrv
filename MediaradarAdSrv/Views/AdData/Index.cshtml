@using Trirand.Web.Mvc
@model MediaradarAdSrv.Models.AdGridViewModel

@{
    ViewBag.Title = "Ads";
}

<link rel="stylesheet" type="text/css" media="screen" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.0/themes/redmond/jquery-ui.css" />
<link rel="stylesheet" type="text/css" href="../../Content/jquery.jqGrid/ui.jqgrid.css" />
<script src="http://ajax.microsoft.com/ajax/jquery/jquery-1.9.0.min.js" type="text/javascript"></script>
<script type="text/javascript" src="../../Scripts/i18n/grid.locale-en.js"></script>
<script type="text/javascript" src="../../Scripts/jquery.jqGrid.min.js"></script>   

<h2>Full Ads</h2>
<div>
    @Html.Trirand().JQGrid(Model.FullAdsGrid, "fullGrid")
</div>

<h2>Cover Ads</h2>

<div>
    @Html.Trirand().JQGrid(Model.CoverAdsGrid, "coverGrid")
</div>

<h2>Top 5 Ads</h2>

<div>
    @Html.Trirand().JQGrid(Model.Top5AdsByPageCoverageGrid, "top5AdsGrid")
</div>

<h2>Top 5 Brand</h2>

<div>
    @Html.Trirand().JQGrid(Model.Top5BrandByPageCoverageGrid, "top5BrandGrid")
</div>

